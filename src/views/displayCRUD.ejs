<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read in CRUD</title>

    <style>
        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }
        
        td, th {
          border: 1px solid #dddddd;
          text-align: left;
          padding: 8px;
        }
        
        tr:nth-child(even) {
          background-color: #dddddd;
        }

        .btn-edit {
            text-decoration: none;
            outline: none;
            border: none;
            background-color: greenyellow;
            height: 25px;
            width: 50px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-delete {
            text-decoration: none;
            outline: none;
            border: none;
            background-color: red;
            height: 25px;
            width: 70px;
            border-radius: 5px;
            cursor: pointer;
        }
        </style>
</head>
<body>
    <table>
        <tr>
          <th>Email</th>
          <th>Firs tName</th>
          <th>Last Name</th>
          <th>Action</th>
        </tr>
        <% for(let i=0; i<dataTable.length; i++) { %>
            <tr>
                <td><%= dataTable[i].email %></td>
                <td><%= dataTable[i].firstName %></td>
                <td><%= dataTable[i].lastName %></td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="button">Delete</a>
                </td>
            </tr>
        <% } %>
      </table>
</body>
</html>